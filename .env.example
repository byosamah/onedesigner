# OneDesigner Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit actual secrets to the repository

# ===========================================
# Database (Supabase)
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project-ref.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ===========================================
# Application URLs
# ===========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"

# ===========================================
# Authentication
# ===========================================
# Generate with: openssl rand -hex 32
NEXTAUTH_SECRET="generate-a-random-32-byte-hex-string"

# Admin email address(es) - required for blog admin access
# For single admin:
ADMIN_EMAIL="your_admin_email@example.com"
# For multiple admins (comma-separated):
# ADMIN_EMAILS="admin1@example.com,admin2@example.com"

# ===========================================
# Email (Resend)
# ===========================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_your_api_key"
EMAIL_FROM="Hala from OneDesigner <team@onedesigner.app>"

# ===========================================
# Payment (LemonSqueezy)
# ===========================================
# Get API key from: https://app.lemonsqueezy.com/settings/api
# Get webhook secret from: https://app.lemonsqueezy.com/settings/webhooks
LEMONSQUEEZY_API_KEY="your-api-key"
LEMONSQUEEZY_WEBHOOK_SECRET="your-webhook-secret"
LEMONSQUEEZY_STORE_ID="your-store-id"

# ===========================================
# AI Matching (DeepSeek)
# ===========================================
# Get from: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY="sk-your-api-key"
DEEPSEEK_BLOG_API_KEY="sk-your-blog-api-key"

# ===========================================
# Cron Jobs & Background Tasks
# ===========================================
# Generate with: openssl rand -hex 32
CRON_SECRET="your-cron-secret-key"

# ===========================================
# Feature Flags (all enabled by default)
# ===========================================
USE_NEW_DATA_SERVICE="true"
USE_ERROR_MANAGER="true"
USE_REQUEST_PIPELINE="true"
USE_CONFIG_MANAGER="true"
USE_BUSINESS_RULES="true"
USE_CENTRALIZED_LOGGING="true"
USE_OTP_SERVICE="true"
USE_EMAIL_SERVICE="true"
ENABLE_QUERY_CACHE="true"

# ===========================================
# Optional: Business Timing Configuration
# ===========================================
# These have sensible defaults - only override if needed
# OTP_EXPIRY_MINUTES="10"
# OTP_COOLDOWN_SECONDS="60"
# EMAIL_RATE_LIMIT_PER_MINUTE="60"
# EMAIL_MAX_RETRIES="3"
# MATCH_EXPIRY_DAYS="7"

# ===========================================
# Optional: Additional Services
# ===========================================
# Uncomment and configure if you use these services

# Vector Search (Pinecone)
# PINECONE_API_KEY="your-api-key"
# PINECONE_ENVIRONMENT="your-environment"
# PINECONE_INDEX_NAME="onedesigner-matches"

# Redis (Upstash) - for caching
# UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="your-token"

# Analytics
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-analytics-id"

# ===========================================
# Environment
# ===========================================
NODE_ENV="development"
